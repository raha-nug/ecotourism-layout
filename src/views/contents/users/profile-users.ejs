<div class="container">
  <div
    class="text-center profile-container"
    style="
      display: flex;
      justify-content: center;
      margin-bottom: 1rem;
      width: 9rem;
    ">
    <img
      src="/images/faces/1.jpg"
      alt="Profile Picture"
      class="profile-img"
      style="width: 100%; height: auto; border-radius: 0.5rem" />
  </div>

  <div class="card">
    <div class="card-body">
      <form>
        <div class="row g-3 mb-3">
          <!-- Name of Bussiness -->
          <div class="col-md-6">
            <label for="companyName" class="form-label">Name of Bussiness</label>
            <input
              type="text"
              class="form-control"
              id="companyName"
              value="Dior Hotel" />
          </div>

          <!-- Location -->
          <div class="col-md-6">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              class="form-control"
              id="location"
              value="City, Country" />
          </div>
        </div>

        <div class="row g-3 mb-3">
          <!-- Email -->
          <div class="col-md-6">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              id="email"
              value="company@example.com" />
          </div>

          <!-- Phone -->
          <div class="col-md-6">
            <label for="phone" class="form-label">Phone</label>
            <input
              type="text"
              class="form-control"
              id="phone"
              value="+123 456 789" />
          </div>
        </div>

        <div class="row g-3 mb-3">
          <!-- Website -->
          <div class="col-md-6">
            <label for="website" class="form-label">Website</label>
            <input
              type="url"
              class="form-control"
              id="website"
              value="www.companywebsite.com" />
          </div>

          <!-- Certification Status -->
          <div class="col-md-6">
            <label for="certification" class="form-label">
              Certification Status
            </label>
            <select class="form-select" id="certification">
              <option selected>Certified</option>
              <option value="in-progress">In Progress</option>
              <option value="pending">Pending</option>
            </select>
          </div>
        </div>

        <div class="row g-3 mb-3">
          <!-- Description -->
          <div class="col-12">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" rows="4">
Lorem ipsum dolor sit amet, consectetur adipiscing elit. This company focuses on providing sustainable ecotourism services while maintaining ecological balance.</textarea
            >
          </div>
        </div>

        <div class="row g-3 mb-3">
          <!-- Logo Upload -->
          <div class="col-md-6">
            <label for="logo" class="form-label">Upload Company Logo</label>
            <input type="file" class="form-control" id="logo" />
          </div>

          <!-- Registered Date -->
          <div class="col-md-6">
            <label for="registered" class="form-label">Registered Date</label>
            <input
              type="date"
              class="form-control"
              id="registered"
              value="2023-01-12" />
          </div>
        </div>

        <!-- Buttons -->
        <div class="row g-3">
          <div class="col-md-12 d-flex justify-content-end">
            <button type="submit" class="btn btn-success me-2">
              Save Changes
            </button>
            <button type="reset" class="btn btn-secondary">Cancel</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
