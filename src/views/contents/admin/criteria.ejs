<div class="page-heading">
  <div class="page-title">
    <div class="row">
      <div class="col-12 col-md-6 order-md-1 order-last">
        <h3>List Criteria</h3>
        <p class="text-subtitle text-muted">
          A sortable, searchable, paginated table without dependencies thanks to
          simple-datatables
        </p>
      </div>
      <div class="col-12 col-md-6 order-md-2 order-first">
        <nav
          aria-label="breadcrumb"
          class="breadcrumb-header float-start float-lg-end"
        >
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="index.html">Manage Assesment</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              Manage Criteria
            </li>
          </ol>
        </nav>
      </div>
    </div>
  </div>
  <section class="section">
    <div class="card">
      <div>
        <div class="card-header d-flex justify-content-between">
          <h4>List Criteria</h4>
          <button
            class="btn icon icon-left btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#themeForm"
          >
            <i class="bi bi-plus"></i> Criteria
          </button>
        </div>
      </div>
      <div class="card-body">
        <table class="table table-striped" id="table1">
          <thead>
            <tr>
              <th>Criteria Name</th>
              <th>Description</th>
              <th>Level</th>
              <th>Activities</th>
              <th>Fasilities</th>
              <th>services</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% criteria.forEach(function(criteria) { %>
            <tr>
              <td><%= criteria.name %></td>
              <td><%= criteria.desc %></td>
              <% if(criteria.level === 'Mandatory') { %>
              <td class="text-danger"><%= criteria.level %></td>
              <% } else if(criteria.level === 'Optional') { %>
              <td><%= criteria.level %></td>
              <% } else { %>
              <td><%= criteria.level %></td>
              <% } %> <% if(criteria.activities === true) { %>
              <td>
                <a href="#" class="btn icon btn-success"
                  ><i class="bi bi-check"></i
                ></a>
              </td>
              <% } else { %>
              <td>
                <a href="#" class="btn icon btn-danger"
                  ><i class="bi bi-x"></i
                ></a>
              </td>
              <% } %> <% if(criteria.fasilities === true) { %>
              <td>
                <a href="#" class="btn icon btn-success"
                  ><i class="bi bi-check"></i
                ></a>
              </td>
              <% } else { %>
              <td>
                <a href="#" class="btn icon btn-danger"
                  ><i class="bi bi-x"></i
                ></a>
              </td>
              <% } %> <% if(criteria.services === true) { %>
              <td>
                <a href="#" class="btn icon btn-success"
                  ><i class="bi bi-check"></i
                ></a>
              </td>
              <% } else { %>
              <td>
                <a href="#" class="btn icon btn-danger"
                  ><i class="bi bi-x"></i
                ></a>
              </td>
              <% } %>
              <td>
                <a
                  href="#"
                  class="btn icon btn-warning"
                  data-bs-toggle="modal"
                  data-bs-target="#themeForm"
                  ><i class="bi bi-pencil"></i
                ></a>
                <button
                  type="button"
                  id="deleteTheme"
                  class="btn icon btn-danger"
                >
                  <i class="bi bi-x"></i>
                </button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</div>
