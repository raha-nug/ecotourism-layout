<div class="page-heading">
  <div class="page-title">
    <div class="row">
      <div class="col-12 col-md-6 order-md-1 order-last">
        <h3>Manage News</h3>
        <p class="text-subtitle text-muted">
          Multiple form layouts, you can use
        </p>
      </div>
      <div class="col-12 col-md-6 order-md-2 order-first">
        <nav
          aria-label="breadcrumb"
          class="breadcrumb-header float-start float-lg-end"
        >
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="index.html">Dashboard</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              Manage News
            </li>
          </ol>
        </nav>
      </div>
    </div>
  </div>

  <!-- Basic Horizontal form layout section start -->
  <section id="basic-horizontal-layouts">
    <div class="row match-height">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">Horizontal Form</h4>
          </div>
          <div class="card-content">
            <div class="card-body">
              <form class="form form-horizontal">
                <div class="form-body">
                  <div class="row">
                    <div class="col-md-4">
                      <label> News Headline</label>
                    </div>
                    <div class="col-md-8 form-group">
                      <input
                        type="text"
                        id="first-name"
                        class="form-control"
                        name="fname"
                        placeholder="First Name"
                      />
                    </div>
                    <div class="col-md-4">
                      <label>Date</label>
                    </div>
                    <div class="col-md-8 form-group">
                      <div class="d-flex gap-2">
                        <input
                          class="form-control"
                          id="example-date"
                          type="date"
                          name="date"
                        />
                        <input
                          class="form-control"
                          id="example-month"
                          type="month"
                          name="month"
                        />
                      </div>
                    </div>
                    <div class="col-md-4">
                      <label>Short Description</label>
                    </div>
                    <div class="col-md-8 form-group">
                      <div class="pr-4">
                        <textarea
                          class="form-control"
                          id="example-textarea"
                          rows="7"
                        ></textarea>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <label>Image Event</label>
                    </div>
                    <div class="col-md-8 form-group">
                      <div class="row">
                        <div class="">
                          <div class="mb-10">
                            <label for="example-fileinput" class="form-label"
                              >Default file input</label
                            >
                            <input
                              type="file"
                              id="example-fileinput"
                              class="form-control"
                            />
                          </div>
                          <div class="d-flex justify-content-end">
                            <button
                              id="add-article-button"
                              class="btn btn-primary"
                            >
                              Add Article
                            </button>
                          </div>
                          <div id="articleInputs" class="row mb-3">
                            <div class="">
                              <label for="example-fileinput" class="form-label"
                                >Article 1</label
                              >
                              <div class="pr-4">
                                <textarea
                                  class="form-control"
                                  id="example-textarea"
                                  rows="7"
                                ></textarea>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-sm-12 d-flex justify-content-end">
                      <button type="submit" class="btn btn-primary me-1 mb-1">
                        Submit
                      </button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- // Basic Horizontal form layout section end -->
  <script>
    let articleCount = 1;
    const articleContainer = document.getElementById("articleInputs");
    const addButton = document.getElementById("add-article-button");

    addButton.addEventListener("click", function (e) {
      // Increment the article coun
      e.preventDefault();
      articleCount++; // Increment the count for unique ID
      // Create a new div element for the new input
      const newArticleInput = document.createElement("div");
      newArticleInput.classList.add("my-2");

      // Set the inner HTML to the same structure as the initial input, but with unique IDs
      newArticleInput.innerHTML = `
  <label for="example-textarea-${articleCount}" class="form-label">Article ${articleCount}</label>
  <div class="">
    <textarea
      class="form-control"
      id="example-textarea-${articleCount}"
      rows="7"
      placeholder="Write your article here..."
    ></textarea>
  </div>
`;
      articleContainer.appendChild(newArticleInput);
    });
  </script>
  <!-- // Basic multiple Column Form section end -->
</div>
